# Satellite Tile Manager Configuration

# Environment: development, production, or vercel
ENVIRONMENT=development

# Database
DATABASE_URL=sqlite:///./data/tiles.db
# For PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/stm
# For Vercel Postgres:
# DATABASE_URL=postgres://...@...-pooler.us-east-1.postgres.vercel-storage.com/verceldb

# API Keys (optional - NAIP, OSM, Sentinel-2, and ESRI work without keys)
GOOGLE_MAPS_API_KEY=
BING_MAPS_API_KEY=
MAPBOX_ACCESS_TOKEN=

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Storage paths (local development)
TILES_DIR=./data/tiles
CACHE_DIR=./data/cache

# Vercel Blob Storage (for serverless deployment)
BLOB_READ_WRITE_TOKEN=

# Processing
MAX_CONCURRENT_DOWNLOADS=5
DOWNLOAD_TIMEOUT_SECONDS=30

# Cache settings
CACHE_MAX_SIZE_MB=100
CACHE_MAX_ENTRIES=1000
CACHE_TTL_SECONDS=3600
